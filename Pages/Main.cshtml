@page
@model MainModel
@{
    ViewData["Title"] = "Main Page";
}

@foreach (var article in @Model.Articles)
{
    <div class="card">
        <div class="card-header">
            <h4 class="card-text">
                @article.Title
            </h4>
        </div>
        <div class="card-body">
            <h6 class="card-text">
                @article.Description
            </h6>
        </div>
    </div>
}