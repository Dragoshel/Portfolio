@page
@model ProjectsModel

@foreach (var article in Model.Articles)
{
    <div class="card">
    <a class="stretched-link" href=@("Articles/" + article.Id)></a>
    <div class="card-head">
        <div class="card-text">
            @article.Title
        </div>
    </div>
    <div class="card-body">
        @article.Description
    </div>
</div>
}
